<UserControl 
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:MFAAvalonia.Views.UserControls"
    mc:Ignorable="d" d:DesignWidth="200" d:DesignHeight="40"
    x:Class="MFAAvalonia.Views.UserControls.VersionLabel">
    
    <DockPanel VerticalAlignment="Center">
        <TextBlock
            DockPanel.Dock="Right"
            HorizontalAlignment="Center"
            Margin="0,0,0,0"
            Text="{Binding $parent[local:VersionLabel].Version}" />
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock
                FontSize="16"
                FontWeight="SemiBold"
                Text="{Binding $parent[local:VersionLabel].Title}"
                Margin="0,0,5,0"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"/>
        </StackPanel>
    </DockPanel>
</UserControl> 