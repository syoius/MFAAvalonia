<UserControl
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="MFAAvalonia.Views.UserControls.Settings.VersionUpdateSettingsUserControl"
    x:DataType="settings:VersionUpdateSettingsUserControlModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helper="clr-namespace:MFAAvalonia.Helper"
    xmlns:markup="https://codewf.com"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:settings="clr-namespace:MFAAvalonia.ViewModels.UsersControls.Settings"
    xmlns:suki="https://github.com/kikipoulet/SukiUI"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:userControls="clr-namespace:MFAAvalonia.Views.UserControls"
    xmlns:calcBinding="clr-namespace:CalcBinding;assembly=CalcBindingAva"
    xmlns:utilities="clr-namespace:MFAAvalonia.Utilities"
    xmlns:markupExtensions="clr-namespace:FluentIcons.Avalonia.Fluent.MarkupExtensions;assembly=FluentIcons.Avalonia.Fluent">
    <Design.DataContext>
        <settings:VersionUpdateSettingsUserControlModel />
    </Design.DataContext>
    <StackPanel Spacing="15">
        <!-- 版本信息和自动更新设置并排显示 -->
        <Grid ColumnDefinitions="*,*" Margin="0,0,0,0">
            <suki:GlassCard Grid.Column="0" Padding="25,15,25,15" Margin="0,0,7.5,0">
                <StackPanel Spacing="15">
                    <DockPanel>
                        <ToggleSwitch
                            Classes="Switch"
                            DockPanel.Dock="Right"
                            IsChecked="{Binding EnableCheckVersion}"
                            IsEnabled="{Binding Idle, Source={x:Static helper:Instances.RootViewModel}}"
                            VerticalAlignment="Top" />
                        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center">
                            <TextBlock
                                FontSize="16"
                                FontWeight="SemiBold"
                                Text="{markup:I18n {x:Static helper:LangKeys.AutomaticDetectionUpdate}}"
                                VerticalAlignment="Center" />
                        </StackPanel>
                    </DockPanel>
                    <DockPanel>
                        <ToggleSwitch
                            Classes="Switch"
                            DockPanel.Dock="Right"
                            IsChecked="{Binding EnableAutoUpdateResource}"
                            IsEnabled="{Binding Idle, Source={x:Static helper:Instances.RootViewModel}}"
                            VerticalAlignment="Top" />
                        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center">
                            <TextBlock
                                FontSize="16"
                                FontWeight="SemiBold"
                                Text="{markup:I18n {x:Static helper:LangKeys.AutomaticUpdateResource}}"
                                VerticalAlignment="Center" />
                        </StackPanel>
                    </DockPanel>
                    <DockPanel>
                        <ToggleSwitch
                            Classes="Switch"
                            DockPanel.Dock="Right"
                            IsChecked="{Binding EnableAutoUpdateMFA}"
                            IsEnabled="{Binding Idle, Source={x:Static helper:Instances.RootViewModel}}"
                            VerticalAlignment="Top" />
                        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center">
                            <TextBlock
                                FontSize="16"
                                FontWeight="SemiBold"
                                Text="{markup:I18n {x:Static helper:LangKeys.AutomaticUpdateMFA}}"
                                VerticalAlignment="Center" />
                        </StackPanel>
                    </DockPanel>
                </StackPanel>
            </suki:GlassCard>
            
            <suki:GlassCard Grid.Column="1" Padding="25,15,25,15" Margin="7.5,0,0,0" VerticalContentAlignment="Center">
                <StackPanel Spacing="20" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <userControls:VersionLabel 
                        Title="{markup:I18n {x:Static helper:LangKeys.SoftwareVersion}}" 
                        Version="{Binding MfaVersion}" />
                    
                    <userControls:VersionLabel 
                        Title="{markup:I18n {x:Static helper:LangKeys.ResourceVersion}}" 
                        Version="{Binding ResourceVersion}"
                        IsVisible="{Binding ShowResourceVersion}" />
                    
                    <userControls:VersionLabel 
                        Title="{markup:I18n {x:Static helper:LangKeys.MaaFWVersion}}" 
                        Version="{Binding MaaFwVersion}" />
                </StackPanel>
            </suki:GlassCard>
        </Grid>
        
        <suki:GlassCard Padding="25,15,25,15">
            <StackPanel Spacing="10">
                <DockPanel>
                    <ComboBox
                        Classes="Switch"
                        DockPanel.Dock="Right"
                        ItemsSource="{Binding DownloadSourceList}"
                        DisplayMemberBinding="{Binding Name}" Width="215"
                        SelectedIndex="{Binding DownloadSourceIndex}"
                        IsEnabled="{Binding !IsUpdating, Source={x:Static helper:Instances.RootViewModel}}"
                        VerticalAlignment="Top" />
                    <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center">
                        <TextBlock
                            FontSize="16"
                            FontWeight="SemiBold"
                            Text="{markup:I18n {x:Static helper:LangKeys.ResourceDownloadSource}}"
                            VerticalAlignment="Center" />
                    </StackPanel>
                </DockPanel>
                <DockPanel IsVisible="{calcBinding:Binding 'DownloadSourceIndex==0'}">
                    <suki:PasswordBox
                        DockPanel.Dock="Right" Watermark="{markup:I18n {x:Static helper:LangKeys.Optional}}"
                        HorizontalAlignment="Center" MinHeight="40"
                        Password="{Binding GitHubToken}"
                        Width="215" />
                    <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center">
                        <TextBlock
                            FontSize="16"
                            FontWeight="SemiBold"
                            Text="Token"
                            VerticalAlignment="Center" />
                    </StackPanel>
                </DockPanel>
                <DockPanel IsVisible="{calcBinding:Binding 'DownloadSourceIndex==1'}">
                    <suki:PasswordBox
                        DockPanel.Dock="Right"
                        HorizontalAlignment="Center"
                        Password="{Binding CdkPassword}"
                        Width="215" />
                    <Button DockPanel.Dock="Right"
                            BorderBrush="Transparent"
                            BorderThickness="0"
                            Command="{x:Static utilities:UrlUtilities.OpenLink}"
                            CommandParameter="{x:Static helper:MFAUrls.PurchaseLink}"
                            Height="40"
                            HorizontalAlignment="Center"
                            Margin="0,0,4,0">
                        <TextBlock
                            FontSize="14" Foreground="{DynamicResource SukiPrimaryColor}"
                            Text="{markup:I18n {x:Static helper:LangKeys.PurchaseLink}}" />
                    </Button>


                    <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center">
                        <TextBlock
                            FontSize="16"
                            FontWeight="SemiBold"
                            Text="CDK"
                            VerticalAlignment="Center" />
                    </StackPanel>
                </DockPanel>
            </StackPanel>
        </suki:GlassCard>
        
        <suki:GlassCard Padding="25,15,25,15">
            <Grid ColumnDefinitions="*,Auto,*,Auto,*" RowDefinitions="Auto" Margin="0" HorizontalAlignment="Stretch">
                <!-- 第一列 - MFA检查与更新 -->
                <StackPanel Grid.Column="0" Spacing="10" Margin="5" VerticalAlignment="Center">
                    <Border Margin="0,5,0,5">
                        <DockPanel>
                            <Button
                                BorderBrush="Transparent"
                                BorderThickness="0"
                                Command="{Binding CheckMFAUpdateCommand}"
                                Content="{markupExtensions:FluentIcon Icon=ArrowRepeatAll, IconSize=Size16}"
                                IsEnabled="{calcBinding:Binding '!IsUpdating and Idle', Source={x:Static helper:Instances.RootViewModel}}"
                                DockPanel.Dock="Right"
                                Height="40"
                                HorizontalAlignment="Center"
                                Margin="0,0,5,0"
                                ToolTip.Tip="{markup:I18n {x:Static helper:LangKeys.CheckMFA}}" />
                            <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center">
                                <TextBlock
                                    FontSize="16"
                                    FontWeight="SemiBold"
                                    Text="{markup:I18n {x:Static helper:LangKeys.CheckMFA}}"
                                    VerticalAlignment="Center" />
                            </StackPanel>
                        </DockPanel>
                    </Border>
                    
                    <Border Margin="0,5,0,5">
                        <DockPanel>
                            <Button
                                BorderBrush="Transparent"
                                BorderThickness="0"
                                Command="{Binding UpdateMFACommand}"
                                Content="{markupExtensions:FluentIcon Icon=ArrowRepeatAll, IconSize=Size16}"
                                IsEnabled="{calcBinding:Binding '!IsUpdating and Idle', Source={x:Static helper:Instances.RootViewModel}}"
                                DockPanel.Dock="Right"
                                Height="40"
                                HorizontalAlignment="Center"
                                Margin="0,0,4,0"
                                ToolTip.Tip="{markup:I18n {x:Static helper:LangKeys.SoftwareUpdate}}" />
                            <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center">
                                <TextBlock
                                    FontSize="16"
                                    FontWeight="SemiBold"
                                    Text="{markup:I18n {x:Static helper:LangKeys.SoftwareUpdate}}"
                                    VerticalAlignment="Center" />
                            </StackPanel>
                        </DockPanel>
                    </Border>
                </StackPanel>
                
                <!-- 分隔线1 -->
                <Rectangle Grid.Column="1" Width="1" Margin="5,10,10,10" Fill="{DynamicResource SukiControlBorderBrush}" VerticalAlignment="Stretch" />
                
                <!-- 第二列 - 资源检查与更新 -->
                <StackPanel Grid.Column="2" Spacing="10" Margin="5" VerticalAlignment="Center">
                    <Border Margin="20,5,0,5">
                        <DockPanel>
                            <Button
                                BorderBrush="Transparent"
                                BorderThickness="0"
                                Command="{Binding CheckResourceUpdateCommand}"
                                Content="{markupExtensions:FluentIcon Icon=ArrowRepeatAll, IconSize=Size16}"
                                IsEnabled="{calcBinding:Binding '!IsUpdating and Idle', Source={x:Static helper:Instances.RootViewModel}}"
                                DockPanel.Dock="Right"
                                Height="40"
                                HorizontalAlignment="Center"
                                Margin="0,0,4,0"
                                ToolTip.Tip="{markup:I18n {x:Static helper:LangKeys.CheckResource}}" />
                            <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center">
                                <TextBlock
                                    FontSize="16"
                                    FontWeight="SemiBold"
                                    Text="{markup:I18n {x:Static helper:LangKeys.CheckResource}}"
                                    VerticalAlignment="Center" />
                            </StackPanel>
                        </DockPanel>
                    </Border>
                    
                    <Border Margin="20,5,0,5">
                        <DockPanel>
                            <Button
                                BorderBrush="Transparent"
                                BorderThickness="0"
                                Command="{Binding UpdateResourceCommand}"
                                Content="{markupExtensions:FluentIcon Icon=ArrowRepeatAll, IconSize=Size16}"
                                IsEnabled="{calcBinding:Binding '!IsUpdating and Idle', Source={x:Static helper:Instances.RootViewModel}}"
                                DockPanel.Dock="Right"
                                Height="40"
                                HorizontalAlignment="Center"
                                Margin="0,0,4,0"
                                ToolTip.Tip="{markup:I18n {x:Static helper:LangKeys.UpdateResource}}" />
                            <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center">
                                <TextBlock
                                    FontSize="16"
                                    FontWeight="SemiBold"
                                    Text="{markup:I18n {x:Static helper:LangKeys.UpdateResource}}"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center" />
                            </StackPanel>
                        </DockPanel>
                    </Border>
                </StackPanel>
                
                <!-- 分隔线2 -->
                <Rectangle Grid.Column="3" Width="1" Margin="5,10,10,10" Fill="{DynamicResource SukiControlBorderBrush}" VerticalAlignment="Stretch" />
                
                <!-- 第三列 - MaaFW更新 -->
                <StackPanel Grid.Column="4" Spacing="10" Margin="5" VerticalAlignment="Center">
                    <Border Margin="20,5,0,5">
                        <DockPanel>
                            <Button
                                BorderBrush="Transparent"
                                BorderThickness="0"
                                Command="{Binding UpdateMaaFWCommand}"
                                Content="{markupExtensions:FluentIcon Icon=ArrowRepeatAll, IconSize=Size16}"
                                IsEnabled="{calcBinding:Binding '!IsUpdating and Idle', Source={x:Static helper:Instances.RootViewModel}}"
                                DockPanel.Dock="Right"
                                Height="40"
                                HorizontalAlignment="Right"
                                Margin="0,0,4,0"
                                ToolTip.Tip="{markup:I18n {x:Static helper:LangKeys.UpdateMaaFW}}" />
                            <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center">
                                <TextBlock
                                    FontSize="16"
                                    FontWeight="SemiBold"
                                    Text="{markup:I18n {x:Static helper:LangKeys.UpdateMaaFW}}"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center" />
                            </StackPanel>
                        </DockPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </suki:GlassCard>
    </StackPanel>
</UserControl>