<UserControl
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d" x:DataType="pages:SettingsViewModel"
    x:Class="MFAAvalonia.Views.UserControls.Settings.AboutUserControl"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helper="clr-namespace:MFAAvalonia.Helper"
    xmlns:markup="https://codewf.com"
    xmlns:markupExtensions="clr-namespace:FluentIcons.Avalonia.Fluent.MarkupExtensions;assembly=FluentIcons.Avalonia.Fluent"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:suki="https://github.com/kikipoulet/SukiUI"
    xmlns:utilities="clr-namespace:MFAAvalonia.Utilities"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:pages="clr-namespace:MFAAvalonia.ViewModels.Pages">
    <StackPanel Spacing="10">
        <suki:GlassCard Padding="25,8,25,8">
            <DockPanel>
                <Button
                    BorderBrush="Transparent"
                    BorderThickness="0"
                   Click="DisplayAnnouncement"
                    Content="{markupExtensions:FluentIcon Icon=Send,
                                                          IconSize=Size16}"
                    DockPanel.Dock="Right"
                    Height="40"
                    HorizontalAlignment="Center"
                    Margin="0,0,4,0" />
                <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center" Orientation="Horizontal">
                    <TextBlock
                        FontSize="16"
                        FontWeight="SemiBold"
                        Text="{markup:I18n {x:Static helper:LangKeys.DisplayAnnouncement}}"
                        VerticalAlignment="Center" />
                </StackPanel>
            </DockPanel>
        </suki:GlassCard>
        <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Center">
            <suki:GlassCard Padding="25,8,25,8">
                <DockPanel>
                    <Button
                        BorderBrush="Transparent"
                        BorderThickness="0"
                        Command="{x:Static utilities:UrlUtilities.OpenLink}"
                        CommandParameter="{x:Static helper:MFAUrls.GitHub}"
                        Content="{markupExtensions:FluentIcon Icon=Send,
                                                              IconSize=Size16}"
                        DockPanel.Dock="Right"
                        Height="40"
                        HorizontalAlignment="Right"
                        Margin="0,0,4,0" />
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock
                            FontSize="16"
                            FontWeight="SemiBold"
                            Text="{markup:I18n {x:Static helper:LangKeys.Github}}"
                            VerticalAlignment="Center" />
                    </StackPanel>
                </DockPanel>

            </suki:GlassCard>
            <suki:GlassCard Padding="25,8,25,8">
                <DockPanel>
                    <Button
                        BorderBrush="Transparent"
                        BorderThickness="0"
                        Command="{x:Static utilities:UrlUtilities.OpenLink}"
                        CommandParameter="{x:Static helper:MFAUrls.MaayuanDoc}"
                        Content="{markupExtensions:FluentIcon Icon=Book,
                                                              IconSize=Size16}"
                        DockPanel.Dock="Right"
                        Height="40"
                        HorizontalAlignment="Right"
                        Margin="0,0,4,0" />
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock
                            FontSize="16"
                            FontWeight="SemiBold"
                            Text="{markup:I18n {x:Static helper:LangKeys.Manual}}"
                            VerticalAlignment="Center" />
                    </StackPanel>
                </DockPanel>
            </suki:GlassCard>
        </StackPanel>
        
        <StackPanel HorizontalAlignment="Center">
            <suki:GlassCard Padding="25,8,25,8" Width="400">
                <DockPanel>
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock
                            FontSize="16"
                            FontWeight="SemiBold"
                            Text="{markup:I18n {x:Static helper:LangKeys.QQChannel}}"
                            VerticalAlignment="Center" />
                    </StackPanel>
                </DockPanel>
            </suki:GlassCard>
        </StackPanel>
    </StackPanel>
</UserControl>