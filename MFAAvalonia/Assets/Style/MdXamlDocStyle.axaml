<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ctxt="clr-namespace:ColorTextBlock.Avalonia;assembly=ColorTextBlock.Avalonia">
    <Style>
        <Style Selector=".Markdown_Avalonia_MarkdownViewer TextBlock.CodeBlock">
            <Style.Setters>
               
                <Setter Property="FontFamily" Value="Consolas, Microsoft YaHei, Global Monospace" />
                <Setter Property="Foreground" Value="{DynamicResource SukiLowText}" />
                <Setter Property="Background" Value="{DynamicResource SukiPrimaryColor5}" />
            </Style.Setters>
        </Style>
        <Style Selector=".Markdown_Avalonia_MarkdownViewer ctxt|CCode">
            <Style.Setters>
                <Setter Property="Padding" Value="5,3" />
                <Setter Property="FontFamily" Value="Consolas, Microsoft YaHei, Global Monospace" />
                <Setter Property="Foreground" Value="{DynamicResource SukiLowText}" />
                <Setter Property="Background" Value="{DynamicResource SukiPrimaryColor5}" />
            </Style.Setters>
        </Style>
        
    </Style>
</Styles>
